<!DOCTYPE html>
<html>
<head>
    <title>Choose an HTML File</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 20px;
        }
        select, button {
            font-size: 16px;
            padding: 10px;
            margin: 10px;
        }
    </style>
</head>
<body>
    <h1>Choose an HTML File</h1>
    <p>Select a file from the dropdown menu to load it:</p>

    <!-- Dropdown Menu for File Selection -->
    <select id="fileSelector">
        <option value="page1.html">Page 1</option>
        <option value="page2.html">Page 2</option>
    </select>

    <!-- Button to Load Selected File -->
    <button onclick="loadFile()">Load File</button>

    <script>
        function loadFile() {
            // Get the selected file from the dropdown
            const selectedFile = document.getElementById("fileSelector").value;

            // Redirect to the selected file
            window.location.href = selectedFile;
        }
    </script>
</body>
</html>
